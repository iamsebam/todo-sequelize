<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %>
</head>
<body>
  <% include ../partials/navbar %>
  <div class="main dashboard">
    <% include ../partials/messages %>
    <div class="todos">
      <div class="todo-form">
        <form method="post" action="/todos/add" name="addTodo">
          <input class="addTodo-input" type="text" name="todo" placeholder="What would you like to do, <%= user.username %>?" autocomplete="off" spellcheck="false" required>
          <button class="btn addTodo" type="submit"><i class="fas fa-plus"></i></button>
        </form>
      </div>
      <div class="todo-list">
        <ul>
          <% todos.forEach(todo => { %>
            <li data-todo_id="<%= todo.id %>"><%= todo.body %><span class="todo-panel"><i class="fas fa-check invisible"></i><i class="fas fa-edit invisible"></i><i class="fas fa-trash-alt invisible"></i></span></li>
          <% }) %>
        </ul>
      </div>
    </div>
  </div>  
  <% include ../partials/script %>
</body>
</html>